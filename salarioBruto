  <body>
    Valor salário bruto: <input id="valorBruto" /> <br />
    <button onclick="calcularSalario()">Calcular Salário total</button>

    <script>
      function calcularSalario() {
        var descInss = valorBruto.value * 0.1;
        var descIr = valorBruto.value * 0.2;
        var descIs = valorBruto.value / 30;
        var valorTotal = valorBruto.value - (descInss + descIr + descIs);

        alert(
          `Apesar do seu salário bruto ser R$${
            valorBruto.value
          } você receberá ${valorTotal.toFixed(2)}`
        );
      }
    </script>
  </body>
