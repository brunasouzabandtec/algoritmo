  <body>
    Minutos torneira 1 pingando: <input id="torneira1" /> <br />
    Minutos torneira 2 pingando:
    <input id="torneira2" /> <br />
    Minutos torneira 3 pingando: <input id="torneira3" />
    <button onclick="calcularDesperdicio()">Calculo desperdicio</button>

    <script>
      function calcularDesperdicio() {
        var primTorneira = torneira1.value * 15;
        var segTorneira = torneira2.value * 15;
        var tercTorneira = torneira3.value * 15;
        var desperdicioTotal = primTorneira + segTorneira + tercTorneira;

        alert(`Suas 3 torneiras juntas gastam ${desperdicioTotal} Litros`);
      }
    </script>
